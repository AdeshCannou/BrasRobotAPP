<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.6">

            <Spinner
                android:id="@+id/idMASpinnerBTPairedDevices"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/idMAButtonConnect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:backgroundTint="@color/BT_BLUE"
            android:text="Connect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- Contenu du layout gauche ici -->

            <Button
                android:id="@+id/btn_haut"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20sp"
                android:text="&#9650;"
                android:textSize="50sp" />

            <Button
                android:id="@+id/btn_gauche"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="40sp"
                android:text="&#9664;"
                android:textSize="50sp"/>

            <ToggleButton
                android:id="@+id/tgl_on_off"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="false"
                android:layout_marginEnd="9sp"
                android:textOff="Off"
                android:textOn="On" />

            <Button
                android:id="@+id/btn_droite"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40sp"
                android:text="&#9658;"
                android:textSize="50sp"
                />

            <Button
                android:id="@+id/btn_bas"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp"
                android:text="&#9660;"
                android:textSize="50sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_up"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20sp"
                android:text="&#9650;"
                android:textSize="50sp" />

            <Button
                android:id="@+id/btn_down"
                android:layout_width="76dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp"
                android:text="&#9660;"
                android:textSize="50sp"
                />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black">

        <!-- Contenu du layout en bas ici -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
